{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "lib": ["es2017", "dom", "dom.iterable", "scripthost"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true,
  },

  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}
